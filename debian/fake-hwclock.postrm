#!/bin/sh
set -e

case "${1:-}" in
  remove)
    if command -v update-initramfs >/dev/null 2>&1; then
      update-initramfs -u
    fi
    ;;

  purge)
    if command -v update-initramfs >/dev/null 2>&1; then
      update-initramfs -u
    fi
    rm -f /etc/fake-hwclock.data
    ;;
  *) :;;
esac

